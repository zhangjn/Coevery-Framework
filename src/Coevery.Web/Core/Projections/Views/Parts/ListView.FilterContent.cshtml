<div ng-show="showFilter" class="row-fluid filter-collapse">
    <div class="accordion">
        <div class="accordion-group">
            <div class="collapseHeader" ng-click="expendCollapse()">
                <span ng-class="{'icon-collapse-hide':!showFilterEditorZone, 'icon-collapse-show':showFilterEditorZone}"></span>
                <span class="filterInfo">@T("Filter")</span>
                <span class="filterTitle" ng-hide="showFilterEditorZone">{{filterDescription}}</span>
                <span ng-hide="showFilterEditorZone" class="close deleteBtn" ng-click="clearFilter()">×</span>
            </div>
            <div class="accordion-inner collapseZone" ng-show="showFilterEditorZone">
                <div class="form-horizontal filterForm">
                    <div class="control-group filterCreatorWrap">
                    </div>
                    <div class="filterAddNewWrap">
                        <a href="" ng-click="addNewFilterCondition()">+ @T("Add another filter condition")</a>
                    </div>
                    <div class="filterAppWrap">
                        <div class="filterOkCancelWrap">
                            <button class="btn btn-small btn-primary" ng-click="applyFilter()">@T("Apply")</button>
                            <button class="btn btn-small" ng-click="clearFilter()">@T("Clear")</button>
                        </div>
                        <label class="checkbox checkInput">
                            <input type="checkbox" ng-model="needSaveFilter">@T("Save Filter")
                        </label>
                        <input type="text" class="filterInput" ng-show="needSaveFilter" ng-model="currentFilter.Title" placeholder="@T("Enter filter name")">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>