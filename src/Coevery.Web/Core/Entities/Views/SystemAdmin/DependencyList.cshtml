@using Coevery.Utility.Extensions
@model Coevery.Entities.ViewModels.FieldDependencyViewModel
<div id="page-title">
    <h1 id="main-heading" class="pull-left" style="background-image: none;">Field Dependency <span>Define dependencies between fields</span></h1>
</div>
<section id="main-content">
    <div id="page-actions" class="clearfix">
        <div btn-actions>
            <button class="btn btn-small " data-ng-click="back()">Back</button>
            <button class="btn btn-small btn-success" data-ng-click="add()">
                <i class="icon-plus"></i>&nbsp;New
            </button>
        </div>
    </div>
    <div class="row-fluid">
        <section class="gridStyle" ng-grid="gridOptions"></section>
    </div>
</section>
<script type="text/javascript">
    $(function () {
        $("#main-content").css("margin-top", $("#page-title").outerHeight(true));
        $("#page-actions h1 span").attr("title", $("#page-actions h1 span").html());
    });
</script>
