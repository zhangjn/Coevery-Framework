@model Coevery.Entities.ViewModels.EntityDetailViewModel
<header id="page-title">
    <h1 class="pull-left">Entity Detail <span>show entity detail information</span></h1>
</header>
<section id="main-content" data-ng-init="metaId='@Model.Id';isPublished='@Model.HasPublished'">
    <div id="page-actions" class="clearfix">
        <div btn-actions>
            <button type="button" class="btn btn-small" data-ng-click="exit()">Back</button>
            <button type="button" class="btn btn-small" data-ng-click="edit()">
                <i class="icon-edit"></i>&nbsp;Edit
            </button>
            <button class="btn btn-small" data-ng-click="publish()">
                Publish
            </button>
            <button type="button" class="btn btn-small" co-delete-button data-confirm-message="@T("You really want to delete this entity?")" delete-action="delete(@Model.Id)">
                <i class="icon-remove"></i>&nbsp;Delete
            </button>
            <button type="button" data-ng-disabled="isPublished=='False'"
                    class="btn btn-small" data-ng-click="formDesigner()"
                title="@T("Works when the entity has been published.")">
                Form Designer
            </button>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                <section class="span12 view-mode">
                    <header>
                        <h5>General Info</h5>
                    </header>
                    <div class="data-row clearfix">
                        <div class="span6">
                            <span class="title control-label">@T("Display Name")</span>
                            <div class="controls">
                                <span class="control-text">@Model.DisplayName</span>
                            </div>
                        </div>
                        <div class="span6">
                            <span class="title control-label">@T("Name")</span>
                            <div class="controls">
                                <span class="control-text">@Model.Name</span>
                            </div>
                        </div>

                    </div>

                    <div class="data-row clearfix">
                        <div class="span6">
                            <span class="title control-label">@T("Plural Display Name")</span>
                            <div class="controls">
                                <span class="control-text">@Model.Settings["CollectionDisplayName"]</span>
                            </div>
                        </div>
                        <div class="span6">
                            <span class="title control-label">@T("Plural Name")</span>
                            <div class="controls">
                                <span class="control-text">@Model.Settings["CollectionName"]</span>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div class="row-fluid">
                <div class="mytabs">
                    <ul class="nav nav-tabs">
                        <li data-ng-class="{active: showField}">
                            <a data-ng-href="#/Entities/{{$stateParams.Id}}">Fields</a>
                        </li>
                        <li data-ng-class="{active: showRelation}" title="@T("Works when the entity has been published.")">
                            <a data-ng-href="#/Entities/{{$stateParams.Id}}/Relationships">Relationships</a>
                        </li>
                        <li data-ng-class="{active: showView}" title="@T("Works when the entity has been published.")">
                            <a data-ng-href="#/Entities/{{$stateParams.Id}}/Views">Views</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="ng-cloak" ui-view>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(function () {
        $("#main-content").css("margin-top", $("#page-title").outerHeight(true));
        $("#page-actions h1 span").attr("title", $("#page-actions h1 span").html());
    });
</script>
