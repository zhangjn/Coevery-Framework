@model Coevery.Core.Fields.Fields.UrlField
@using Coevery.Core.Fields.Settings
@{
    var settings = Model.PartFieldDefinition.Settings.GetModel<UrlFieldSettings>();
    var required = settings.Required ? "required" : null;
}

<label class="control-label @required" for="@Html.FieldIdFor(m => m.Value)">@Model.DisplayName</label>
<div class="control controls errortips">
    <input type="text" 
           id="@Html.FieldIdFor(m => m.Value)" 
           name="@Html.FieldNameFor(m => m.Value)"
           value="@Model.Value"
        @if (settings.Required) {<text> required="required"</text> }
        @if (settings.ReadOnly) {<text> readonly="readonly"</text> }
           class="textMedium span12 url" 
        @if (!string.IsNullOrWhiteSpace(settings.HelpText)){<text>help-text='@settings.HelpText'</text> } 
        />
    @Html.ValidationMessageFor(m => m, null, new { @class = "error" })
</div>

