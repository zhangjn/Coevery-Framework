@using Coevery.DeveloperTools.Relationship.ViewModels
@using Coevery.Relationship.ViewModels
@{
    var relationships = (IList<RelatedEntityViewModel>)Enumerable.Cast<RelatedEntityViewModel>(Model.Relationships);
}
@foreach (var relationship in relationships) {
    <section class="row-fluid related-list">
        <header>
            <h5>@relationship.Label</h5>

        </header>
        <div data-ng-controller='RelatedEntityListCtrl' data-ng-init="relationId='@relationship.RelationId';entityTypeName='@relationship.RelatedEntityName';partName='@relationship.RelatedPartName';viewId=@relationship.ProjectionId;getRelatedData()">
            <div data-ag-grid="gridOptions" data-ag-grid-name="referenceList"></div>
        </div>
    </section>
}