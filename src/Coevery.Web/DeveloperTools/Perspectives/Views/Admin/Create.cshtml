@using System.ComponentModel
@model Coevery.DeveloperTools.Perspectives.ViewModels.PerspectiveViewModel
<header id="page-title">
    <h1 class="pull-left">@T("Perspective Detail ") <span>show perspective detail information</span></h1>
</header>

<section id="main-content" style="margin-top: 47px">
    <div id="page-actions" class="clearfix">
        <div btn-actions>
            <button type="button" class="btn btn-small" data-ng-click="exit()">Back</button>
            <button type="button" class="btn btn-small btn-primary" data-cobusy="'saveperspective'" data-ng-click="saveAndView()">Save</button>
            <button class="btn btn-small btn-primary" data-cobusy="'saveperspective'" data-ng-click="saveAndBack()">Save & Back</button>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="form-horizontal no-border">
                @using (Html.BeginFormAntiForgeryPost(Url.Action("Create", new { id = Model.Id, ReturnUrl = Request.QueryString["ReturnUrl"] }),
                                                              FormMethod.Post,
                                                              new { @class = "form-horizontal edit-mode", @name = "myForm" }))
                {
                    <fieldset>
                        <legend>General Information</legend>
                        <section class="data-row control-group">
                            <label class="control-label required">Title</label>
                            <div class="controls errortips">
                                @Html.TextBoxFor(m => m.Title, new { @class = "span12",required=""})
                            </div>
                        </section>
                        <section class="data-row control-group">
                            <label class="control-label">Description</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Description, new { @class = "span12"})
                            </div>
                        </section>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</section>
