@using Coevery.PropertyManagement.ViewModels
@using Coevery.Utility.Extensions
@Html.AntiForgeryToken()
@{
    Layout.Title = "出库列表";
    var gridId = "voucher-list";

    Style.Require("jqGrid");
    Style.Require("jqGridCustom");
    Script.Require("jqGrid");
    Script.Require("jqGrid_i18n");

    var gridPagerId = gridId + "Pager";
    var departmentViewModel = new EntitySelectorViewModel
    {
        ClientId = "FilterOptions_DepartmentId",
        ClientName = "FilterOptions.DepartmentId",
        DisplayFieldName = "Name",
        DropdownUrl = Url.Action("DepartmentDropdown", "StockOut"),
        Label = "领用部门",
        PopupWindowCaption = "请选择领用部门",
        RelatedEntityName = "Department",
        RequiredMsg = "请选择领用部门!",
        Required = false
    };
}

<div id="page-actions" class="clearfix">
    <div class="btn-toolbar pull-left">
        <a class="btn btn-small btn-success" href="@Url.Action("Create", new { returnUrl = ViewContext.RequestContext.HttpContext.Request.ToUrlString() })"><i class="icon-plus"></i>&nbsp;@T("Add")</a>
        <button id="btnView" class="btn btn-small btn-primary hide" type="button"><i class="icon-edit"></i>&nbsp;@T("查看")</button>
        <button id="btnRefresh" class="btn btn-small" type="button"><i class="icon-refresh"></i>&nbsp;@T("刷新")</button>
    </div>
</div>
<div id="filters" class="form-inline">
    <div class="searchbox">
        <label class="lb-60" for="Filter_BeginDate">@T("开始日期:")</label>
        <div class="input-prepend date-text" data-co-datetime-picker="date">
            <span class="add-on">
                <i data-time-icon="icon-time" data-date-icon="icon-calendar" class="icon-calendar"></i>
            </span>
            @Html.TextBox("FilterOptions.BeginDate", null, new { @class = "date" })
        </div>
    </div>
    <div class="searchbox">
        <label class="lb-60" for="Filter_EndDate">@T("结束日期:")</label>
        <div class="input-prepend date-text" data-co-datetime-picker="date">
            <span class="add-on">
                <i data-time-icon="icon-time" data-date-icon="icon-calendar" class="icon-calendar"></i>
            </span>
            @Html.TextBox("FilterOptions.EndDate", null, new { @class = "date" })
        </div>
    </div>
    <div class="searchbox">
        <label class="lb-80" for="FilterOptions_VoucherNo">@T("出库单号:")</label>
        @Html.TextBox("FilterOptions.VoucherNo", null, new { @class = "text" })
    </div>

    <div class="row-fluid">
        <div class="searchbox span4 ">
            @Display.Partial(TemplateName: "EntitySelector", Model: departmentViewModel)
        </div>
    </div>
    <button type="submit" class="btn btn-small" id="btnStockOutFilter" name="submit.Filter" value="@T("Filter")"><i class="icos-looking-glass"></i>&nbsp;查找</button>
    <button type="reset" class="btn btn-small btnReset" id="btnReset" name="reset" value="清除">重置</button>
</div>
<div class="row-fluid">
    <table id="@gridId"></table>
    <section id="@gridPagerId"></section>
</div>
@using (Script.Foot())
{
    <script>
        $(function () {

            var grid = $('#@gridId');

            $('#btnView').click(function() {
                var selectedRowIds = grid.jqGrid('getGridParam', 'selarrrow');
                if (selectedRowIds.length == 0) return;
                window.location.href = '@Url.Action("StockOutVoucherHistoryView")/' + selectedRowIds[0] + '?returnUrl=@ViewContext.RequestContext.HttpContext.Request.ToUrlString()';
            });
            

            $('#btnRefresh').click(function() {
                grid.trigger('reloadGrid');
            });

            $('#btnStockOutFilter').click(function () {
                var postData = grid.jqGrid('getGridParam', 'postData');
                $('#filters :input').serializeArray().map(function (x) { postData[x.name] = x.value; });
                grid.trigger("reloadGrid");
            });

            $('#btnReset').click(function() {
                $('#filters :input').val('');
                $('#btnStockOutFilter').trigger('click');
            });

            $.extend(jQuery.jgrid.defaults, {
                prmNames: {
                    page: 'page',
                    rows: 'pageSize',
                    sort: 'sortBy',
                    order: 'sortOrder'
                },
                datatype: 'json',
                mtype: 'POST',
                postData: {
                    __RequestVerificationToken: function() {
                        var magicToken = $("input[name=__RequestVerificationToken]").first();
                        if (magicToken.length == 0) {
                            return null;
                        } // no sense in continuing if form POSTS will fail
                        return magicToken.val();
                    }
                },
                viewrecords: true,
                height: '100%',
                pagerpos: 'right',
                recordpos: 'left',
                sortable: true,
                headertitles: true,
                autowidth: true,
                jsonReader: {
                    page: 'page',
                    total: 'totalPages',
                    records: 'totalRecords',
                    repeatitems: false
                }
            });

            var gridOptions = {
                url: '@Url.Action("List", "StockOut", new {area = "Coevery.PropertyManagement"})',
                colModel: [
                    { name: 'Id', hidden: true, key: true },
                    { name: 'VoucherNo', label: '单号' },
                    { name: 'Operation', label: '操作状态' },
                    { name: 'Date', label: '操作日期' },
                    { name: 'DepartmentName', label: '领用部门' },
                    { name: 'Remark', label: '备注' }
                ],
                pager: '#@gridPagerId',
                rowNum: 50,
                rowList: [50, 100, 150],
                sortname: '',
                sortorder: 'Asc',
                multiselect: true,
            };

            grid.jqGrid(gridOptions);

            function updateButtonStatus() {
                var selectedRowIds = grid.jqGrid('getGridParam', 'selarrrow');
                $("#btnView").toggle(selectedRowIds.length == 1);
                $("#btnDelete").toggle(selectedRowIds.length > 0);
            }

            grid.jqGrid('setGridParam', {
                onSelectRow: function() {
                    updateButtonStatus();
                }
            });
            grid.jqGrid('setGridParam', { gridComplete: function() { updateButtonStatus(); } });
        });
    </script>
}