@using Coevery.DisplayManagement.Shapes
@{
    var gridId = "customerGrid";
    var listViewModel = new {
        GridId = gridId
    };
    Shape actionShape = New.Parts_ListViewActions(GridId: gridId, ContentItem: Model.ContentItem);
    actionShape.Metadata.Alternates.Add("Parts_ListViewActions__Customer");

    Shape viewShape = New.Parts_ListViewGrid(listViewModel);
    viewShape.Metadata.Alternates.Add("Parts_ListViewGrid__Customer");
}

@Display(actionShape)
@Display(viewShape)