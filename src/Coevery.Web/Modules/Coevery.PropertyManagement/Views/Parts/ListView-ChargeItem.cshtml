@using Coevery.DisplayManagement.Shapes
@{
    var gridId = "chargeitemGrid";
    var listViewModel = new {
        GridId = gridId
    };
    Shape actionShape = New.Parts_ListViewActions(GridId: gridId, ContentItem: Model.ContentItem);
    actionShape.Metadata.Alternates.Add("Parts_ListViewActions__ChargeItem");

    Shape viewShape = New.Parts_ListViewGrid(listViewModel);
    viewShape.Metadata.Alternates.Add("Parts_ListViewGrid__ChargeItem");
}

@Display(actionShape)
@Display(viewShape)