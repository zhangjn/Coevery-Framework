@using Coevery.DisplayManagement.Shapes
@{
    var gridId = "opportunityGrid";
    var listViewModel = new {
        GridId = gridId
    };
    Shape actionShape = New.Parts_ListViewActions(GridId: gridId);
    actionShape.Metadata.Alternates.Add("Parts_ListViewActions__Opportunity");

    Shape viewShape = New.Parts_ListViewGrid(listViewModel);
    viewShape.Metadata.Alternates.Add("Parts_ListViewGrid__Opportunity");
}

@Display(actionShape)
@Display(viewShape)